/***************** video-box *****************/

.video-box {
  width: 100%;
  min-height: 133rpx;
  height: auto;
  background-color: #fff200;
  box-shadow: 0px 6rpx 0px 0px #ffc900;
  border-radius: 29rpx;
  display: flex;
  padding: 15rpx;
}

.video-box .left {
  width: 56rpx;
  min-height: 104rpx;
  height: auto;
  background-color: #ffa100;
  box-shadow: inset 0px 1rpx 13rpx 0px rgba(255, 0, 0, 0.16);
  border-radius: 20rpx;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: center;
}

.video-box .left .pkicon {
  font-size: 46rpx;
  color: white;
  margin-top: 29rpx;
}

.video-box .mid {
  height: 400rpx;
  background-color: #fff;
  box-shadow: inset 7rpx 7rpx 9rpx 0px rgba(255, 147, 0, 0.26),
                inset 7rpx 7rpx 0px 0px #ffd800;
  border-radius: 20rpx;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
  flex: 1;
  margin: 0 0 0 15rpx;
  display: flex;
  flex-direction: column-reverse;
  align-items: flex-start;
  justify-content: center;
  font-size: 28rpx;
  line-height: 40rpx;
  overflow: hidden;
  position: relative;
}

.video-box .mid video {
  width: 100%;
  height: 400rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
}

