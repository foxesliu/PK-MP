.video-btn {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 400rpx;
  z-index: 2;
}

.video-btn .bg {
  width: 100%;
  height: 400rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
}

.video-btn .btn {
  width: 93rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
}

.video-btn .btn image {
  width: 93rpx;
  height: 93rpx;
}

.video-btn .btn text {
  width: 93rpx;
  text-align: center;
  display: inline-block;
  margin-top: 10rpx;
  font-size: 35rpx;
}
