@import '/public/style/pkicon.wxss';
@import '/public/style/sanfeng.wxss';

.box {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 66;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.image {
  width: 400rpx;
  height: 403rpx;
  position: relative;
  top: -100rpx;
}

.text {
  font-size: 48rpx;
  color: white;
  position: relative;
  top: -130rpx;
}

.btn {
  width: 258rpx;
  height: 82rpx;
  background-color: #fff;
  box-shadow: 0px 2rpx 13rpx 0px rgba(221, 221, 221, 0.5);
  border-radius: 41rpx;
  position: fixed;
  bottom: 200rpx;
  z-index: 100;
  color: #ffbf00;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-left{
  left:100rpx;
}

.btn-right {
  right: 100rpx;
}
