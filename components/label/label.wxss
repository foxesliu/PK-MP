.label-box {
  width: 133rpx;
  height: 133rpx;
  background-color: #fff200;
  box-shadow: 0px 6rpx 0px 0px #ffc900;
  border-radius: 20rpx;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  overflow: hiddden;
  z-index: 100;
}

.label-box:before {
  display: block;
  content: "";
  position: absolute;
  left: -18rpx;
  top: 45rpx;
  width: 0;
  height: 0;
  border-top: 20rpx solid transparent;
  border-bottom: 20rpx solid transparent;
  border-right: 20rpx solid #fff200;
}

.label-box .label-image {
  width: 78rpx;
  height: 78rpx;
  background-image: linear-gradient(90deg);
  box-shadow: 0px 2rpx 10rpx 0px rgba(0, 0, 0, 0.3);
  border: solid 3rpx #fff;
  border-radius: 50%;
  background: white;
}

.label-box .bot {
  width: 100rpx;
  height: 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  border: solid 2rpx #ffe100;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 5rpx;
}

.label-box .bot .circle {
  width: 11rpx;
  height: 11rpx;
  background-color: #ff7138;
  box-shadow: 0px 0px 8rpx 0px #fc8600;
  display: inline-block;
}

.label-box .bot .circle.readed {
  background: #bbb;
  box-shadow: 0px 0px 8rpx 0px #bbb;
}

.label-box .bot .txt {
  font-size: 20rpx;
  margin-left: 7rpx;
}
