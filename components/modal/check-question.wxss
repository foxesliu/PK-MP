@import "/public/style/sanfeng.wxss";
@import "/public/style/pkicon.wxss";

.check-question-shadowbox {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 20;
  display: flex;
  flex-direction: column;
}

.check-question-shadowbox  .bo {
  width: 540rpx;
  height: 500rpx;
  position: fixed;
  left: 50%;
  top: 45%;
  transform: translate(-50%, -50%);
}

.check-question-shadowbox  .bo .top {
  width: 540rpx;
  height: 88rpx;
  background-color: #fde214;
  box-shadow: 0px 2rpx 28rpx 0px rgba(0, 0, 0, 0.16);
  border-radius: 8rpx;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
  display: flex;
  justify-content: center;
}

.check-question-shadowbox .bo .top image {
  width: 99rpx;
  height: 97rpx;
  position: relative;
  top: -20rpx;
}

.check-question-shadowbox .bo .bottom {
  height: 260rpx;
  width: 540rpx;
  background: white;
  border-radius: 8rpx;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  background: linear-gradient(#f0f0f0 0%, white 10%);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.check-question-shadowbox .bo .bottom .vv {
  margin-top: 29rpx;
}

.check-question-shadowbox .btn {
  width: 230rpx;
  text-align: center;
  height: 83rpx;
  line-height: 83rpx;
  background-image: linear-gradient(180deg, #8cd100 0%, #509f00 100%);
  box-shadow: 0px 4rpx 0px 0px #4f8701;
  border-radius: 22rpx;
  font-size: 32rpx;
  color: white;
  margin: 30rpx 0 0 155rpx;
}
