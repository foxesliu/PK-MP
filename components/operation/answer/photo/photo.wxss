@import '../video/video.wxss';

.answer-component-photo {
  background: #9ceb32;
  position: relative;
}

.answer-component-photo .mid {
  min-height: 104rpx;
  height: auto;
  background-color: #fff;
  box-shadow: inset 7rpx 7rpx 9rpx 0px rgba(255, 147, 0, 0.26),
                inset 7rpx 7rpx 0px 0px #ffd800;
  border-radius: 29rpx;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
  flex: 1;
  margin: 0 0 0 15rpx;
  display: flex;
  flex-direction: column-reverse;
  align-items: flex-start;
  justify-content: center;
  font-size: 28rpx;
  line-height: 40rpx;
  overflow: hidden;
}

.answer-component-photo .mid image {
  width: 100%;
  min-height: 104rpx;
}

.record-again {
  right: 20rpx;
  top: 20rpx;
}
