@import "/public/style/pkicon.wxss";
@import "/public/style/sanfeng.wxss";

.box {
  width: 100%;
  height: 134rpx;
  background-color: #fff200;
  box-shadow: 0px 6rpx 0px 0px #ffc900;
  border-radius: 29rpx;
  display: flex;
  padding: 15rpx 20rpx;
}

.left {
  width: 56rpx;
  height: 104rpx;
  background-color: #ffa100;
  box-shadow: inset 0px 1rpx 13rpx 0px rgba(255, 0, 0, 0.16);
  border-radius: 29rpx;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.left .pkicon {
  font-size: 46rpx;
  color: white;
}

.right {
  width: 217rpx;
  height: 70rpx;
  background-image: linear-gradient(0deg, #ff6800 0%, #ff8d00 100%);
  box-shadow: 0px 6rpx 0px 0px #e04b00;
  border-radius: 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 17rpx;
}

.right .text {
  color: white;
  position: relative;
  top: -1rpx;
  left: -5rpx;
  font-size: 26rpx;
}

.right .pkicon {
  color: white;
}

.middle {
  height: 104rpx;
  background-color: #fff;
  box-shadow: inset 7rpx 7rpx 9rpx 0px rgba(255, 147, 0, 0.26),
                inset 7rpx 7rpx 0px 0px #ffd800;
  border-radius: 29rpx;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
  flex: 1;
  margin: 0 15rpx 0 15rpx;
}

.middle .pkicon {
  color: #ff8739;
  font-size: 39rpx;
  line-height: 104rpx;
  margin-left: 30rpx;
}

.middle .second {
  height: 104rpx;
  line-height: 104rpx;
  margin-left: 8rpx;
}
