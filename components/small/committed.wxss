@import "/public/style/sanfeng.wxss";
@import "/public/style/pkicon.wxss";

.committed {
  width: 258rpx;
  height: 90rpx;
  border-radius: 45rpx;
  padding: 9rpx;
  background: #adadad;
  box-shadow: 0px 6rpx 0 0px #9b947e;
}

.committed.active {
  background-image: linear-gradient(0deg, #ff5e00 3%, #f80 100%);
  box-shadow: 0 6rpx 0 0 #c2350c;
}

.committed .left {
  width: 72rpx;
  height: 72rpx;
  line-height: 85rpx;
  text-align: center;
  background-color: #fff;
  /* box-shadow: 0px 2rpx 4rpx 0px #ff6700; */
  border-radius: 50%;
  color: #adadad;
  font-size: 35rpx;
  float: left;
  margin-top:2rpx;
  margin-left:3rpx;
}

.committed.active .left {
  color: #60a800;
}

.committed .txt {
  height: 72rpx;
  line-height: 78rpx;
  margin-left: 30rpx;
  float: left;
}
