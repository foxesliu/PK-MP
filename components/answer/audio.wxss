.audio-container .shape {
  padding: 22rpx;
  width: 90%;
  height: auto;
  margin-left: 5%;
  background-image: linear-gradient(180deg, #c1e600 0%, #fffa72 8%, #fff949 16%, #fff42a 100%);
}

.audio-container .shape .t {
  width: 220rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background: #ff7a00;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: white;
  position: relative;
}

.audio-container .shape .t view {
  position: absolute;
  left: 0;
  top: 70rpx;
  color: #ff7a00;
  font-size: 18rpx;
}

.audio-container .shape .c {
  padding: 0 10rpx 0 25rpx;
  margin-top: 10rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  height: auto;
}
