@import "./text.wxss";

.mid {
  height: 400rpx;
  background-color: #fff;
  box-shadow: inset 7rpx 7rpx 9rpx 0px rgba(255, 147, 0, 0.26),
                inset 7rpx 7rpx 0px 0px #ffd800;
  border-radius: 29rpx;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
  flex: 1;
  margin: 0 0 0 15rpx;
  display: flex;
  flex-direction: column-reverse;
  align-items: flex-start;
  justify-content: center;
  font-size: 28rpx;
  line-height: 40rpx;
  overflow: hidden;
  position: relative;
}

.mid video {
  width: 100%;
}

