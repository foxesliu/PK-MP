.label-box {
  width: 110rpx;
  height: 106rpx;
  background-color: #fff200;
  box-shadow: 0px 6rpx 0px 0px #ffc900;
  border-radius: 20rpx;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  overflow: hiddden;
  z-index: 10;
}

.label-box:before {
  display: block;
  content: "";
  position: absolute;
  left: -15rpx;
  top: 39rpx;
  width: 0;
  height: 0;
  border-top: 15rpx solid transparent;
  border-bottom: 15rpx solid transparent;
  border-right: 15rpx solid #fff200;
}

.label-box .label-image {
  width: 60rpx;
  height: 60rpx;
  background-image: linear-gradient(90deg);
  box-shadow: 0px 2rpx 8rpx 0px rgba(0, 0, 0, 0.3);
  border: solid 3rpx #fff;
  border-radius: 50%;
  background: white;
}

