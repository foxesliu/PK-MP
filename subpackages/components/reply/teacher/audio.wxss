@import "/public/style/pkicon.wxss";
@import "/public/style/sanfeng.wxss";

.reply-teacher-audio-box {
  width: 100%;
  min-height: 155rpx;
  height: auto;
  display: flex;
  justify-content: flex-start;
}

.reply-teacher-audio-box .image {
  margin-right: 30rpx;
}

.reply-teacher-audio-box .titleimg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  position: relative;
  top: 4rpx;
}

.reply-teacher-audio-box .boxes .top {
  width: 400rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.reply-teacher-audio-box .box {
  width: 400rpx;
  min-height: 116rpx;
  height: auto;
  background: #fff200;
  border-radius: 10rpx;
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
}

.reply-teacher-audio-box .box.before:before {
  display: block;
  content: "";
  position: absolute;
  left: -18rpx;
  top: 20rpx;
  width: 0;
  height: 0;
  border-top: 20rpx solid transparent;
  border-bottom: 20rpx solid transparent;
  border-right: 20rpx solid #fff200;
}

.reply-teacher-audio-box .box .left {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.reply-teacher-audio-box .box .right .pkicon {
  position: relative;
  top: 2rpx;
}

.reply-teacher-audio-box .btn {
  width: 217rpx;
  height: 70rpx;
  background-image: linear-gradient(0deg, #ff6800 0%, #ff8d00 100%);
  box-shadow: 0px 6rpx 0px 0px #e04b00;
  border-radius: 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.reply-teacher-audio-box .color-548e05 {
  color: #548e05;
}

.reply-teacher-audio-box .color-fff200 {
  color: #fff200;
}

.reply-teacher-audio-box .color-ff8739 {
  color: #ff8739;
}

.txt-box {
  padding: 15rpx !important;
}

.video-boxx, .photo-box {
  padding: 0 !important;
  border-radius: 10rpx;
  height: 350rpx !important;
}

.video-boxx image {
  height: 350rpx;
  border-radius: 10rpx;
}

.video-boxx video {
  height: 350rpx;
  border-radius: 10rpx;
}

.photo-box image {
  border-radius: 10rpx;
  min-height: 116rpx;
}
