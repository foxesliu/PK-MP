/* pages/center/mycup.wxss */
page{
  height: 100%;
  width: 100%;
  background: #f6f6f6;
}
.flex-box{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.top-box{
  width: 100%;
  height: 110rpx;
  background: #fde214;
}
.cups-box{
  width: 710rpx;
	height: 223rpx;
	background-color: #ffffff;
	box-shadow: 0px 5rpx 17rpx 0px 
		rgba(206, 206, 206, 0.5);
	border-radius: 8rpx;
  margin: 0 auto;
  justify-content: space-between;
  padding: 0 30rpx 0 45rpx;
}
.cups-box .item-l image{
  width: 151rpx;
	height: 143rpx;
}

.cups-box .item-m{
  flex: 1;
  margin-left: 33rpx;
}
.cups-box .item-m .number{
  font-size: 28rpx;
  color: #424242;
  font-weight: 500;
}
.cups-box .item-m .number text{
  font-size: 72rpx;
  padding-right: 5rpx;
}
.cups-box .text{
  color: #b8b8b8;
}
.detail-box{
  margin-top: 142rpx;
  padding-bottom: 100rpx;
}
.li{
  width: 100%;
	height: 223rpx;
	background-color: #ffffff;
  justify-content: space-between;
}
.li .item-l{
  width: 33rpx;
	height: 56rpx;
	background-color: #ff9400;
}
.li .item-m{
  flex: 1;
  margin-left: 8rpx;
}
.li .item-m .text1{
  font-size: 30rpx;
  color: #ff9400;
}
.li .item-m .text2{
  font-size: 38rpx;
  color: #444444;
  margin: 16rpx 0 25rpx 0;
}
.li .item-m .text3{
  font-size: 24rpx;
  color: #a1a1a1;
}
.li .item-r{
  font-size: 64rpx;
  color: #ff7138;
  margin-right: 50rpx;
}
.btm-btn{
  margin-top: 44rpx;
  color: #c2c2c2;
  font-size: 28rpx;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding-bottom:36rpx;
}

.btm-btn .pkicon{
  transform: rotate(90deg)
}