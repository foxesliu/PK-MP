/* pages/center/rules.wxss */
page{
  background-color: #231f02 ;
}
 .images-box{
  width: 405rpx;
	height: 196rpx;
  position: relative;
  margin: 0 auto;
}
 .images-box image{
    position: absolute;
    
}
 .images-box image:nth-child(1){
  width: 405rpx;
	height: 392rpx;
  top: -94rpx;
}
 .images-box image:nth-child(2){
  width: 203rpx;
	height: 193rpx;
  top: 45rpx;
  left: 50%;
  margin-left: -101rpx;
}
.title{
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
}

.top-box{
  background:repeating-linear-gradient(-70deg, #fff32d, #fff32d 15rpx, #ffee2d 0, #ffee2d 25rpx);
	border-radius: 8rpx;
  width: 710rpx;
  margin: 0 auto;
  padding: 50rpx 0 25rpx 0;
}
.top-box .title1{
  color: #d96000;
}
.top-box .txt{
  color:#874000;
  padding: 0 34rpx;
  font-size: 24rpx;
  text-indent: 48rpx;
  line-height: 1.5;
} 
.m-box{
  
	border-radius: 8rpx;
  width: 710rpx;
  margin: 0 auto;
  margin-top: 15rpx;
  overflow: hidden;
}
.m-box .title{
  background-color: #fff32d;
  height: 100rpx;
  color: #ae5a00;
  line-height: 100rpx;
}
.m-box .txt-box{
  background-color: #ffffff;
  padding: 0 34rpx;
}
.m-box .txt-box .txt{
  font-size: 28rpx;
  color: #454545;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}
.m-box .txt-box .txt-info{
  width: 587rpx;
  line-height: 1.5
}
.m-box .txt-box .txt1{
  height: 150rpx;
  border-bottom: solid 1rpx #e5e5e5;
  padding-top: 38rpx;
}
.m-box .txt-box .txt2{
  height: 208rpx;
  padding-top: 34rpx;
}
.m-box .txt-box .txt image{
  display: block;
  width: 44rpx;
	height: 42rpx;
  margin-right: 10rpx;
}
.btm-box{
  width: 265rpx;
	height: 83rpx;
	background-image: linear-gradient(180deg, 
		#8cd100 0%, 
		#509f00 100%);
	box-shadow: 0px 4rpx 0px 0px 
		#4f8701;
	border-radius: 22rpx;
  color: #ffffff;
  text-align: center;
  line-height: 83rpx;
  margin: 0 auto;
  margin-top: 16rpx;
}
