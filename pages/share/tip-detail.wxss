@import '/public/style/sanfeng.wxss';
@import '/public/style/pkicon.wxss';

.committed-container {
  z-index: 66;
  width: 100%;
  height: 92rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.myquestion-modal-box {
  padding: 0 20rpx;
  width: 100%;
  position: fixed;
  top: 140rpx;
  left: 0;
  z-index: 5;
}

.myquestion-modal-box .box {
  width: 100%;
  height: 200rpx;
  background: white;
  border-radius: 10rpx;
  position: relative;
}

.myquestion-modal-box .box:before {
  display: block;
  content: "";
  position: absolute;
  right: 95rpx;
  top: -18rpx;
  width: 0;
  height: 0;
  border-bottom: 20rpx solid#f97317;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
}

.myquestion-modal-box .top {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #f97317;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.right-image {
  width: 52rpx;
  height: 52rpx;
}

.myquestion-modal-box .bottom {
  width: 100%;
  height: 120rpx;
  overflow: hidden;
  box-shadow: 0px 6rpx 0 0px #e7e7e7;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.myquestion-modal-box .bottom view {
  border-right: 1rpx solid #dedede;
  width: 20%;
  height: 120rpx;
  line-height: 120rpx;
  float: left;
  text-align: center;
}

.myquestion-modal-box .bottom view:last-child {
  border-right: 0;
}

.myquestion-top {
  width: 100%;
  height: 72rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 24rpx;
}

.myquestion-top .left {
  width: 227rpx;
  height: 72rpx;
  background-color: #fff;
  border-radius: 8rpx;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
  display: flex;
  /* justify-content: center; */
  align-items: center;
  padding-left: 10rpx;
}

.myquestion-top text {
  display: inline-block;
}

.myquestion-top .left .t1, .myquestion-top .left .t2 {
  height: 49rpx;
  line-height: 49rpx;
  text-align: center;
  border-radius: 8rpx;
}

.myquestion-top .left .t1 {
  width: 108rpx;
  background-color: #84c908;
  color: white;
  margin-right: 10rpx;
}

.myquestion-top .t3 {
  color: #ff7a04;
  height: 72rpx;
  line-height: 72rpx;
}

.myquestion-top .t4 {
  margin-left: 8rpx;
  height: 72rpx;
  line-height: 72rpx;
}

.myquestion-top .right {
  width: 235rpx;
  height: 72rpx;
  background-color: #fff200;
  box-shadow: 0px 6rpx 0px 0px #ffc900;
  border-radius: 36rpx;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

page {
  background: black;
  padding-bottom:80rpx;
}
