page {
  background: #ffe941;
}

.page-bg {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: black;
}

.tab-container {
  padding: 10rpx 0;
  height: 136rpx;
  background-color: #fff;
  width: 750rpx;
  position: relative;
  z-index: 2;
}

.tab {
  width: 750rpx;
  height: 116rpx;
  border-top: 2rpx dashed #f3f3f3;
  border-bottom: 2rpx dashed #f3f3f3;
}

.tab .v {
  margin: 13rpx 0 0 15rpx;
  width: 200rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-image: linear-gradient(178deg, #fff800 0%, #fe0 100%);
  box-shadow: 0px 6rpx 15rpx 0 rgba(255, 207, 0, 0.19);
  border-radius: 45rpx;
  float: left;
  font-size: 26rpx;
  position: relative;
}

.tab .v.is-ask {
  background-image: none;
  background: #ebebeb;
  box-shadow: none;
}

.tab .v .span {
  background-color: #ff7138;
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  position: absolute;
  right: -6rpx;
  top: -6rpx;
}

.tab .n {
  margin-top: 13rpx;
  width: 236rpx;
  height: 90rpx;
  background-image: linear-gradient(178deg, #fff800 0%, #fe0 100%);
  box-shadow: 0px 6rpx 15rpx 0px rgba(255, 207, 0, 0.19);
  border-radius: 45rpx;
  float: right;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}

.tab .n.is-ask {
  background-image: linear-gradient(180deg, #ff8f40 0%, #ff4500 100%);
  box-shadow: 0px 4rpx 0px 0px #d92f00;
}

.tab .n image {
  width: 72rpx;
  height: 72rpx;
  margin: 9rpx 0 0 15rpx;
  float: left;
}

.tab .n text {
  height: 90rpx;
  line-height: 90rpx;
  float: left;
  margin-left: 15rpx;
  font-size: 26rpx;
}

.list {
  padding-top: 30rpx;
  overflow: hidden;
  position: relative;
  z-index: 2;
}

.list .item {
  float: left;
}

.list .item:nth-child(2n+1) {
  margin: 0 20rpx;
}

.footer {
  width: 100%;
  height: 390rpx;
  position: relative;
  margin-top: 50rpx;
}

.footer .bg {
  width: 100%;
  height: 331rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}

.footer .image {
  width: 312rpx;
  height: 326rpx;
  position: absolute;
  left: 50%;
  top: 0;
  transform: translateX(-50%);
}
