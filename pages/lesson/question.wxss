.tab {
  width: 100%;
  height: 94rpx;
  line-height: 94rpx;
  background: #fff;
  box-shadow: 0px 2rpx 15rpx 0px rgba(220, 220, 220, 0.5);
}

.tab .v {
  text-align: center;
  font-size: 32rpx;
  float: left;
  width: 50%;
  position: relative;
}

.tab .v .text {
  padding-bottom: 4rpx;
  border-bottom: 4rpx solid white;
  font-weight: 400;
}

.tab .v.active .text {
  border-bottom: 4rpx solid #fde214;
}

.tab .v .span {
  background: #ff7138;
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
  position: absolute;
  top: 15rpx;
  left: 50%;
  margin-left: 35rpx;
}

.new-list {
  padding-top: 44rpx;
}

.new-list .item {
  margin-bottom: 44rpx;
  position: relative;
}

.new-list .time {
  width: 264rpx;
  height: 41rpx;
  line-height: 41rpx;
  text-align: center;
  background: #e3e3e3;
  border-radius: 5px;
  font-size: 24rpx;
  color: #7d7d7d;
  margin: 0 auto;
}

.new-list .box {
  width: 710rpx;
  height: 170rpx;
  background: #fff;
  border-radius: 8rpx;
  margin: 20rpx 0 0 20rpx;
  display: flex;
}

.new-list .box .left {
  width: 99rpx;
  height: 170rpx;
  background: white;
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}

.left .x {
  width: 99rpx;
  height: 49rpx;
  line-height: 49rpx;
  text-align: center;
  background: #ff7138;
  box-shadow: 0px 4rpx 0px 0px #ffb699;
  font-size: 24rpx;
  color: white;
  margin-top: 40rpx;
}

.left .y {
  width: 99rpx;
  height: 49rpx;
  line-height: 49rpx;
  text-align: center;
  font-size: 24rpx;
}

.new-list .box .middle {
  flex: 1;
  height: 170rpx;
  background: #f9f9f9;
}

.new-list .middle image {
  width: 99rpx;
  height: 99rpx;
  border-radius: 50%;
  margin: 35rpx 0 0 15rpx;
}

.new-list .middle .view {
  margin-top: 48rpx;
}

.new-list .box .right {
  width: 141rpx;
  height: 170rpx;
  background: #fde214;
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.list {
  padding-top: 0;
}

.list .item {
  margin-bottom: 20rpx;
  height: 170rpx;
}

.list .right-btn {
  width: 161rpx;
  height: 170rpx;
  background: #f9f9f9;
}

.list .right-btn view {
  width: 141rpx;
  height: 74rpx;
  line-height: 74rpx;
  text-align: center;
  background: #fde214;
  border-radius: 8rpx;
  margin-top: 48rpx;
}

.list .right {
  background: #f9f9f9 !important;
}

.list .right view {
  width: 141rpx;
  height: 74rpx;
  line-height: 74rpx;
  text-align: center;
  background-color: #fde214;
  border-radius: 8rpx;
  margin-right: 15rpx;
}

.reply-time {
  font-size: 22rpx;
  color: #7d7d7d;
  position: absolute;
  right: 40rpx;
  bottom: 10rpx;
}

page {
  background: #ededed;
}
