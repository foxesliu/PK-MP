/* pages/login/login.wxss */
page{
  width: 100%;
  height: 100%;
}
.flex-box{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.main-container{
  width: 100%;
  height: 100%;
  background: #fde214;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center
}
.container{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center
}
.title-box{
   width: 468rpx;
	height: 142rpx;
  margin-top: 153rpx;
}
.title-box .top-img{
  width: 468rpx;
	height: 142rpx;
	background-color: #c14f13;
	box-shadow: 0px 11rpx 28rpx 0px 
		rgba(193, 79, 19, 0.55);
	border-radius: 37rpx;
}
.text-box{
  width: 491rpx;
	height: 86rpx;
  font-size: 28rpx;
  margin-top: 80rpx;
  text-align: center;
  line-height: 1.7;
}
.next-box .next{
  /* margin-top: 47rpx; */
  width: 230rpx;
	height: 83rpx;
	background-image: linear-gradient(180deg, 
		#8cd100 0%, 
		#509f00 100%);
	box-shadow: 0rpx 4rpx 0px 0px 
		#4f8701;
	border-radius: 22rpx;
  color:#ffffff;
  font-size: 32rpx;
}
.resetPw{
  margin-top: 65rpx;
  text-decoration: underline;
	font-size: 28rpx;
  color: #c14f13;
  z-index: 9;
}
.bottom-box{
  width: 100%;
}

.bottom-box .img{
  height:330rpx; 
  display: block;
  width: 100%;
}
.errorTip{
  font-size: 24rpx;
  color: #ff634b;
  display: block;
  margin-top: 10rpx;
  padding-left: 12rpx;
}
.activeBor{
  border: solid 2px #ff715b;
}